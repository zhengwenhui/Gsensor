<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GsensorActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextViewStep1"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_blueborder"
            android:clickable="true"
            android:drawableTop="@drawable/step1"
            android:gravity="center"
            android:lines="2"
            android:onClick="onClickTextView" />

        <TextView
            android:id="@+id/TextViewStep2"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_greenborder"
            android:clickable="true"
            android:drawableTop="@drawable/step2"
            android:gravity="center"
            android:lines="2"
            android:onClick="onClickTextView" />

        <TextView
            android:id="@+id/TextViewStep3"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_purpleborder"
            android:clickable="true"
            android:drawableTop="@drawable/step3"
            android:gravity="center"
            android:lines="2"
            android:onClick="onClickTextView" />

        <TextView
            android:id="@+id/TextViewResult"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_redborder"
            android:clickable="true"
            android:drawableTop="@drawable/result"
            android:gravity="center"
            android:lines="4"
            android:onClick="onClickTextView" />
    </LinearLayout>

</ScrollView>